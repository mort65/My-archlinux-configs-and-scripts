# Maintainer: Mbani <>

pkgname=dwm-patched
pkgver=6.1
pkgrel=3
pkgdesc="A dynamic window manager for X"
url="http://dwm.suckless.org"
arch=('i686' 'x86_64')
license=('MIT')
conflicts=('dwm')
options=(zipman)
depends=('libx11' 'libxinerama' 'libxft' 'freetype2')
optdepends=('st' 'dmenu')
install=dwm.install
source=(config.def.h config.h config.mk startdwm drw.c drw.h dwm.1 dwm.c dwm.desktop dwm.png fibonacci.c gaplessgrid.c LICENSE layouts.c Makefile README selfrestart.c shiftview.c transient.c util.c util.h)

prepare() {
  mkdir -p "$pkgname-$pkgver"
  cd "$srcdir/$pkgname-$pkgver"
  cp "$srcdir/config.def.h" .
  cp "$srcdir/config.h" .
  cp "$srcdir/config.mk" .
  cp "$srcdir/startdwm" .
  cp "$srcdir/drw.c" .
  cp "$srcdir/drw.h" .
  cp "$srcdir/dwm.1" .
  cp "$srcdir/dwm.c" .
  cp "$srcdir/dwm.desktop" .
  cp "$srcdir/dwm.png" .
  cp "$srcdir/fibonacci.c" .
  cp "$srcdir/gaplessgrid.c" .
  cp "$srcdir/layouts.c" .
  cp "$srcdir/LICENSE" .
  cp "$srcdir/Makefile" .
  cp "$srcdir/README" .
  cp "$srcdir/selfrestart.c" .
  cp "$srcdir/shiftview.c" .
  cp "$srcdir/transient.c" .
  cp "$srcdir/util.c" .
  cp "$srcdir/util.h" .
}

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make X11INC=/usr/include/X11 X11LIB=/usr/lib/X11 FREETYPEINC=/usr/include/freetype2
}

package() {
  cd "$srcdir"/"$pkgname-$pkgver"
  make PREFIX=/usr DESTDIR="$pkgdir" install
  install -m644 -D LICENSE "$pkgdir"/usr/share/licenses/"$pkgname"/LICENSE
  install -m644 -D README "$pkgdir"/usr/share/doc/"$pkgname"/README
  install -m644 -D "$srcdir"/dwm.desktop "$pkgdir"/usr/share/xsessions/dwm.desktop
  install -m755 -D "$srcdir"/startdwm "$pkgdir"/usr/bin/startdwm
}

md5sums=(SKIP
         SKIP
         SKIP
         SKIP
         SKIP
         SKIP
         SKIP
         SKIP
         SKIP
         SKIP
         SKIP
         SKIP
         SKIP
         SKIP
         SKIP
         SKIP
         SKIP
         SKIP
         SKIP
         SKIP
         SKIP)
