#!/bin/bash

USERNAME=${SUDO_USER:-$(id -u -n)}
HOMEDIR="/home/$USERNAME"

if [[ -s "$HOMEDIR/.number_of_updates.txt" ]]; then
    NUM=$(cat "$HOMEDIR/.number_of_updates.txt")
    if [[ $NUM =~ ^[0-9]+$ ]]; then
        if [[ NUM -le 1000 ]]; then
            string="${NUM}"
        elif [[ NUM -gt 999999999999999 ]]; then
            string="N"
        else
            ABBR='t'
            RNG='1000000000000'
            declare -a ABBRC=('k' 'm' 'b' 't');
            declare -a ABBRN=('1000' '1000000' '1000000000' '1000000000000');
            for (( i=1; i<${#ABBRN[@]}; i++ )); do
                if [[  $(( $NUM / ${ABBRN[$i]} )) -eq 0 ]]; then
                    ABBR=${ABBRC[$((i-1))]}
                    RNG=${ABBRN[$((i-1))]}
                    break
                fi
            done
            TMP=$(( $NUM / $RNG ))
            case "${#TMP}" in
                1 )
                    if [ "$NUM" != "$RNG" ]; then
                        string="${TMP}.${NUM:1:1}${ABBR}" 
                    else
                        string="1${ABBR}"
                    fi 
                    ;;
                2 )
                    string="${TMP}${ABBR}" 
                    ;;
                3 )
                    string="${TMP:0:1}${TMP:1:1}${TMP:2:1}${ABBRC[$(( i-1 ))]}"
                    ;;
           esac
        fi
        echo "$string"
    else
        echo "!"
    fi	
fi

exit 0
