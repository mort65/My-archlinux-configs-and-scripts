CPU usage:$alignr${cpu cpu0}%
#Updates:$alignr${execi 60 ~/bin/checkupdateslog}  
Updates:$alignr${execi 60 [[ -s "~/.number_of_updates.txt" ]] && cat "~/.number_of_updates.txt" || echo "0"} 

