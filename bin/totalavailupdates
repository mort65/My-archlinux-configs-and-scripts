#!/bin/bash
#this script show available updates available with using logupdates script

# Colors
red=`tput setaf 1`
green=`tput setaf 2`
reset=`tput sgr0`

USERNAME=$(logname)
HOMEDIR="/home/$USERNAME"

NUM=0

if [[ -s "$HOMEDIR/.number_of_updates.txt" ]]; then
	NUM=$(cat "$HOMEDIR/.number_of_updates.txt")
	echo "$red$NUM$reset"
else
	echo "$NUM"
fi
