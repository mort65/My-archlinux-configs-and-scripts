#!/bin/bash
#this script unmount a disk image 

username=$(id -u -n)
Mountpoint="/run/media/$username/iso"
SUDO=""

if [ $EUID -ne 0 ]; then
    SUDO='/usr/bin/sudo'
fi

if [ -d "$Mountpoint" ]; then
	if [ "$(ls -A $Mountpoint)" ]; then
		$SUDO umount "$Mountpoint"
		exit 0
	else
		echo "$Mountpoint is Empty"
		exit 1
	fi
else
	echo "$Mountpoint not found"
	exit 1
fi

exit 0
