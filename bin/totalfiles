#!/bin/bash
#Counts number of files and dirs in current directory or a path with two diffrent methods
PT=$(pwd)
if [ "${#}" -gt 1 ]; then
    echo -e $red"Error:$reset Invalid number of parameters"
   exit 1
elif [ "${#}" -eq 1 ]; then
    PT=$1
fi
expr `/bin/ls -f "${PT}" | wc -l` - 2
Files=$(find "${PT}" -maxdepth 1 -type f -printf "." | wc -c)
Dirs=$(find "${PT}" -maxdepth 1 -type d -printf "." | wc -c)
echo Dir $Dirs
echo File $Files
echo Total $(bc -l <<< "$Dirs + $Files")
exit 0
