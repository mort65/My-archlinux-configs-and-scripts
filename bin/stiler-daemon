#!/bin/sh
me="$(basename "$0")";
running=$(pgrep -cx "$me");
[ "$running" -gt 1 ] && exit 1;

while true ;do
	if ! pidof -x "stiler.py" >/dev/null 2>&1 ;then
		~/bin/stiler.py reset
		break
	fi
	sleep 1
done

sleep 1

while true ;do
	if ! pidof -x "stiler.py" >/dev/null 2>&1 ;then
		~/bin/stiler.py daemon
	fi
	sleep 1
done
