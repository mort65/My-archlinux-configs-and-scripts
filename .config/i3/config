# Pulse Audio controls
# run pactl list sinks
bindsym $mod+KP_Add exec --no-startup-id /usr/bin/pactl set-sink-volume alsa_output.pci-0000_00_1b.0.analog-stereo +5% #increase sound volume
bindsym $mod+KP_Subtract exec --no-startup-id /usr/bin/pactl set-sink-volume alsa_output.pci-0000_00_1b.0.analog-stereo -5% #decrease sound volume
bindsym $mod+KP_Multiply exec --no-startup-id /usr/bin/pactl set-sink-mute alsa_output.pci-0000_00_1b.0.analog-stereo toggle # mute sound


#system shortcuts
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id ~/bin/i3/i3exit lock, mode "default"
    bindsym e exec --no-startup-id ~/bin/i3/i3exit logout, mode "default"
    bindsym s exec --no-startup-id ~/bin/i3/i3exit suspend, mode "default"
    bindsym h exec --no-startup-id ~/bin/i3/i3exit hibernate, mode "default"
    bindsym r exec --no-startup-id ~/bin/i3/i3exit reboot, mode "default"
    bindsym Shift+s exec --no-startup-id ~/bin/i3/i3exit shutdown, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Pause mode "$mode_system"

#set a random wallpaper for wokspace1
#exec --no-startup-id $feh -recursive --randomize --bg-fill ~/Pictures/Pics/*

#put random wallpapers for each workspace in a directory:
exec --no-startup-id /usr/bin/python ~/bin/i3/i3ws.py &

#Change to Workspace1:
exec --no-startup-id /usr/bin/i3-msg workspace $workspace1 &

#change workspace1 wallpaper
exec_always --no-startup-id $feh --bg-scale $HOME/.i3wm-wallpapers/1.jpg &
exec --no-startup-id /usr/bin/python ~/bin/i3/wsp.py &

#change keyboard layout with ctrl+shift:
exec --no-startup-id /usr/bin/setxkbmap us,ir -option 'grp:alt_shift_toggle'

exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
